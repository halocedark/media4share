<div class="upload-modal-container custom-modal" id="downloadModalContainer">
	<div class="wrapper modal-content app-block">
		<div class="modal-header">
			<h1 class="modal-title">Files Selected for Downloading</h1>
			<div class="nav-buttons">
				<button class="btn-minimize" id="minimizeDialogBTN">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
						<path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
					</svg>
				</button>
				<button class="btn-close" id="closeDialogBTN"></button>
			</div>
		</div>
		<div class="modal-body">
			<div id="selectedFilesDiv">
				
			</div>
		</div>
		<div class="modal-footer">
			<div class="stats-div" id="statsDiv">
				<div class="stat" id="filesCount">
					<span class="stat-title">Total files: </span>
					<span class="stat-desc">0 files</span>
				</div>
				<div class="stat" id="totalFilesSizes">
					<span class="stat-title">Total download size: </span>
					<span class="stat-desc">0 bytes</span>
				</div>
			</div>
			<div class="modal-footer-buttons">
				<button class="footer-btn btn-normal" id="cancelAllBTN">Cancel All</button>
			</div>
		</div>
	</div>
</div>
